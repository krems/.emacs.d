#!/usr/bin/env python
# Author: Valeriy Ovchinnikov
import sys

class Predator:
    pass

class Victim:
    pass

def hunting(field, predators):
    pass

def moving(field, victims):
    pass

if len(sys.argv) != 2:
    print "Usage: ocean.py <config file>"
    sys.exit(1)

fconf = open(sys.argv[1])
conf_line = fconf.readline()
conf = conf_line.split(conf_line, ':')
fconf.close()

size = conf[0]
iterations = conf[1]
reproduce_time = conf[2]
die_time = conf[3]
predators_number = conf[4]
victims_number = conf[5]
# field:
# 0 - empty
# 1 - rock
# 2 - victim
# 3 - predator
field = [[]]

predators = set()
victims = set()

for i in xrange(0, iterations):
    hunting(field, predators)
    moving(field, victims)
    if len(predators) == 0 or len(victims) == 0:
        break
