class Rational(object):
    def __init__(self, nom, denom):
        self.nom = nom
        self.denom = denom
    def __add__(self, rhs):
        if isinstance(rhs, Rational):
            return Rational(self.nom * rhs.denom + rhs.nom * self.denom, self.denom * rhs.denom)
        else:
            return Rational(self.nom + rhs * self.denom, self.denom)
    def __radd__(self, lhs):
        return Rational(lhs * self.denom + self.nom, self.denom)
    def __iadd__(self, rhs):
        if isinstance(rhs, Rational):
            self.nom = self.nom * rhs.denom + rhs.nom * self.denom
            self.denom *= rhs.denom
        else:
            self.nom += rhs * self.denom
        return self
    def __str__(self):
        return str(self.nom) + "/" str(self.denom)

print 1 + Rational(3, 4)
print Rational(1, 2) + 3
print Rational(1, 2) + Rational(1, 3)
print Rational(8, 9) += Rational(3, 4)
print Rational(8, 9) += 1
        
