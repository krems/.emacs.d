constexpr bool is_prime(int number) {
  return (number <= 1) ? false : is_prime_recursive(number, 2);
}

constexpr bool is_prime_recursive(int number, size_t c) {
  return (c*c > number) ?
      true : (number % c == 0) ? false : is_prime_recursive(number, c + 1);
}

int main() {
  static_assert(is_prime(29), "is not prime");
  static_assert(is_prime(30), "is not prime");
  return 0;
}
